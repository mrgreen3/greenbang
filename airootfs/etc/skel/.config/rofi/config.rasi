configuration {
    font:                "Noto Sans Regular 10";
    show-icons:          true;
    icon-theme:          "Qogir";
    display-drun:        "Search:";
    drun-display-format: "{name}";
    scroll-method:       0;
    disable-history:     false;
    sidebar-mode:        false;
	terminal:            "/usr/bin/alacritty";
}

/* set from within the following [global] */
@theme "~/.config/rofi/gb-dark.rasi"
